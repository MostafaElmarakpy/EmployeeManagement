@model EmployeeManagement.Application.ViewModels.DepartmentViewModel

<form asp-action="CreateModal" method="post" id="createDepartmentForm">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ManagerId"></label>
        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers">
            <option value="">-- Select Manager --</option>
        </select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
