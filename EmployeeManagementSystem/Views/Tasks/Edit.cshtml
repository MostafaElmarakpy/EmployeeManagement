@model TaskMB

<div class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="editTaskForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="modal-header">
                    <h5 class="modal-title">Update Task Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <p class="form-control-plaintext">@Model.Title</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <p class="form-control-plaintext">@Model.Description</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Due Date</label>
                        <p class="form-control-plaintext">@Model.DueDate.ToString("yyyy-MM-dd")</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Assigned By</label>
                        <p class="form-control-plaintext">@Model.CreatedByManagerName</p>
                    </div>

                    <div class="mb-3">
                        <label for="Status" class="form-label">Status</label>
                        <select name="Status" id="Status" class="form-select" asp-items="ViewBag.StatusOptions"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </div>
            </form>
        </div>
    </div>
</div> 
